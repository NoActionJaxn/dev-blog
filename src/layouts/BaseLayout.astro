---
import PageHeader from "../components/PageHeader.astro";
import PageFooter from "../components/PageFooter.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script
      src="https://kit.fontawesome.com/cbb08d6689.js"
      crossorigin="anonymous"></script>
    <style type="text/css">
      html,
      body {
        width: 100%;
        height: 100%;
      }
    </style>

    <title>Jackson Hermitt Dev Blog - {title}</title>
  </head>
  <body>
    <div class="bg-neutral-200 w-screen min-h-screen h-full">
      <div class="flex flex-col gap-2 h-full">
        <PageHeader />
        <div class="px-8 flex-grow">
          <slot />
        </div>
        <PageFooter />
      </div>
    </div>
  </body>
</html>
