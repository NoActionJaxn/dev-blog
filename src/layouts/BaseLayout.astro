---
import PageHeader from "../components/Typography/PageHeader.astro";
import PageFooter from "../components/Typography/PageFooter.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script
      src="https://kit.fontawesome.com/cbb08d6689.js"
      crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Oswald:wght@200..700&display=swap"
      rel="stylesheet"
    />
    <style type="text/css">
      html,
      body {
        width: 100%;
        height: 100%;
        @apply bg-slate-200;
      }
    </style>

    <title>// Jaxn.Dev{title && ` - ${title}`}</title>
  </head>
  <body>
    <div class="grid grid-rows-layout w-screen min-h-full">
      <PageHeader />
      <div class="md:px-16 md:pb-16 px-8 pb-8">
        <div class="max-w-screen-2xl mx-auto">
          <slot />
        </div>
      </div>
      <PageFooter />
    </div>
  </body>
</html>
