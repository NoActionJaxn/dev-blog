---
import classNames from "classnames";

interface Props {
  classlist?: string;
  inverse?: boolean;
}

const { classlist, inverse = false } = Astro.props;
---

<div class="box-border inline-block">
  <h2
    class={classNames(
      inverse ? "bg-slate-200 text-slate-700" : "bg-slate-700 text-slate-200",
      "box-border font-oswald uppercase text-3xl px-2 py-1 mb-3 rounded-md",
      classlist,
    )}
  >
    <slot />
  </h2>
</div>
