---
interface TextArea {
  id: string;
  label: string;
  name: string;
  required?: boolean;
}

const { id, label, name, required } = Astro.props;
---

<label for={id} class="inline-flex flex-col w-full">
  <span class="text-lg"
    >{label}{required && <span class="text-red-600">*</span>}</span
  >
  <div
    class="bg-neutral-200 focus-within:bg-neutral-100 focus-within:outline focus-within:outline-4 focus-within:outline-blue-300 border border-neutral-600"
  >
    <textarea
      id={id}
      name={name}
      class="border-none outline-none bg-transparent p-2 m-0 w-full h-full"
      required={required}
      rows="8"></textarea>
  </div>
</label>
